{
  "apt": {
    "pkgs": ["ninja-build", "g++", "gfortran", "libhwloc-dev", "libopenmpi-dev", "openmpi-bin", "libhdf5-dev"],
    "cmd": "apt install --no-install-recommends"
  },
  "yum": {
    "pkgs": ["epel-release", "gcc-c++", "gcc-gfortran", "hwloc-devel", "openmpi-devel", "hdf5-devel"],
    "cmd": "yum install"
  },
  "pacman": {
    "pkgs": ["gcc", "gcc-fortran", "ninja", "hwloc", "openmpi", "hdf5"],
    "cmd": "pacman -S --needed"
  },
  "zypper": {
    "pkgs": ["gcc-c++", "gcc-fortran", "hdf5-devel"],
    "cmd": "zypper install"
  },
  "brew": {
    "pkgs": ["gcc", "ninja", "hwloc", "openmpi", "hdf5"],
    "cmd": "brew install"
  },
  "port": {
    "pkgs": ["gcc11", "ninja", "hwloc", "openmpi", "hdf5"],
    "cmd": "port install"
  },
  "msys2": {
    "pkgs": ["mingw-w64-x86_64-gcc", "mingw-w64-x86_64-gcc-fortran", "mingw-w64-x86_64-ninja", "mingw-w64-x86_64-hwloc", "mingw-w64-x86_64-msmpi", "mingw-w64-x86_64-hdf5"],
    "cmd": "pacman -S --needed"
  },
  "cygwin": {
    "pkgs": ["gcc-fortran", "gcc-g++", "libopenmpi-devel"],
    "cmd": "setup-x86_64.exe -P"
  }
}
